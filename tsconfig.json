{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "esModuleInterop":true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "typeRoots": 
        [
          "./node_modules/*",
          "./types/*"
        ]
      
  },
  "exclude": [
      "node_modules",
      "build",
      "scripts",
      "index.js"
  ],
}